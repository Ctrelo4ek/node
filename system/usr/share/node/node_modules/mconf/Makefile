INC_DIR = $(PWD)/include
CXXFLAGS += -pie -std=c++14 -fno-exceptions -I$(INC_DIR)
PREFIX ?= /usr/local

src/mconf: src/mconf.cpp

clean:
	rm -f src/mconf

install: src/mconf
	mkdir -p $(DESTDIR)$(PREFIX)/bin
	install src/mconf $(DESTDIR)$(PREFIX)/bin/mconf
	
uninstall:
	rm -f $(PREFIX)/bin/mconf

.PHONY: clean install uninstall